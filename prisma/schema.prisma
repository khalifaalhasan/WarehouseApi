generator client {
  provider = "prisma-client"
  output   = "../src/generated"
  engineType      = "client"
  
  
}

datasource db {
  provider = "postgresql"
  
  
}


// --- ENUMS ---

enum Role {
  ADMIN
  STAFF
}

enum MovementType {
  IN
  OUT
}


// --- MODELS ---

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(STAFF) // Pakai Enum biar strict
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi: User ini pernah input stok apa aja?
  stockMovements StockMovement[]
}

model Product {
  id           Int      @id @default(autoincrement())
  sku          String   @unique // <--- IDEMPOTENCY KEY (Data ganda ditolak DB)
  name         String
  description  String?
  currentStock Int      @default(0) // Diupdate otomatis via code
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relasi: Produk ini punya histori keluar-masuk apa aja?
  stockMovements StockMovement[]
}

model StockMovement {
  id        Int          @id @default(autoincrement())
  type      MovementType // IN (Masuk) atau OUT (Keluar)
  amount    Int
  note      String?
  createdAt DateTime     @default(now())

  // Relasi ke Product (Barang apa yang dipindah?)
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  
  // Relasi ke User (Siapa yang mindahin?)
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
}
