generator client {
  provider = "prisma-client"
  output   = "../src/generated"
  engineType      = "client"
  
  
}

datasource db {
  provider = "postgresql"
  
  
}


// --- ENUMS ---

enum Role {
  ADMIN
  STAFF
}



// --- MODELS ---

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(STAFF) // Pakai Enum biar strict
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


}


